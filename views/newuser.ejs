<%- include('templates/encabezadoc')%>
<body style="background-color: black;">
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
        <!--ENCABEZADO INCIO-->
          <form action="/newuser" method="POST">
            <div class="card">
                <div class="card-header" style="background-color: black;">
                    <h3 style="color:white">Realiza una nueva cuenta</h3>
                </div>
                <!--CUERPO INICIO-->
                <div class="card-body" style="background-color:rgb(225, 123, 0);">
                    <input type="hidden" name="status" id="status" value="true">
                    <p>Nombre:</p>
                    <input class="form-control mb-2 border border-dark" type="text" name="name" id="name" placeholder="Nombre(s)">
                    <p>Apellidos:</p>
                    <input class="form-control mb-2 border border-dark" type="text" name="lastName" id="lastName" placeholder="Apellido(s)">
                    <p>Email:</p>
                    <input class="form-control mb-2 border border-dark" type="email" name="email" id="email" placeholder="user1234@gmail.com">
                    <p>Contrase√±a:</p>
                    <input class="form-control mb-2 border border-dark" type="text" name="password" id="password" placeholder="password123">
                    <p>Tipo:</p>
                    <input class="form-control mb-2 border border-dak" type="text" name="type" id="type" placeholder="admin or user">
                </div>
                <!--PIE INCIO-->
                <div class="card-footer" style="background-color: black;">
                <button class="btn btn-primary" type="submit"><b>Registrar</b></button>
                <a class="btn btn-secondary" href="/users"><b>Cancelar</b></a>
                </div>
            </div>
        </form>
            <!--FIN DE FORMULARIO-->
        </div>
        </div>
    </div>
</div>
</body>
