<%- include('templates/encabezado')%>
<body style="background-color: black;">
<pre></pre>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h1 class="border border-light" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; background-color: black; color: white; text-align: center;" >Contáctanos</h1>
        <br></br>
        <form action="/call" method="POST">
        <div class="card">
            <div class="card-header" style="background-color:   rgb(255, 123, 0);"><h1 style="text-align: center;"><b style="font-family: Arial, Helvetica, sans-serif;">¡Tu opinión es importante para nosotros!</b></h1></div>
            <img class="card-img-top" src="/public/images/Operadora.jpg">
            <div class="card-body">
                <input class="form-control mb-3 border border-dark" type="text" name="nameContac" id="nameContac" placeholder="Nombre completo:">
                <input class="form-control mb-3 border border-dark" type="text" name="emailContac" id="emailContac" placeholder="Correo:">
                <textarea class="form-control border border-dark" name="messageContac" id="messageContac" cols="30" rows="10" placeholder="Escribe tus comentarios..."></textarea>
            </div>
            <div class="card-footer" style="background-color:  rgb(255, 123, 0);">
                <button class="btn btn-primary mt-3 mb-3 col-12" type="submit">Enviar mensaje</button>
                <a class="btn btn-secondary mt-3 mb-3 col-12" href="/">Cancelar</a>
            </div>
        </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>
